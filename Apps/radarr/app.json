{
  "App": {
  "id": "radarr",
  "name": "Radarr",
  "description": "Radarr is a movie collection manager for Usenet and BitTorrent users.",
  "categories": [
    "Torrent", "Media"
  ],
  "icon": "metadata/icon.png",
  "directory": "radarr"
},
"Services": {
  "radarr": {
    "images": {
      "x86_64": "lscr.io/linuxserver/radarr:latest",
      "armhf": "lscr.io/linuxserver/radarr:arm32v7-latest",
      "arm64": "lscr.io/linuxserver/radarr:arm64v8-latest"
    },
    "container_name": "radarr",
    "ports": [
      {
        "container": "7878",
        "host": "7878",
        "description": "Web Interface port"
      }
    ],
    "environment": [
      {
        "name": "TZ",
        "value": "Europe/London",
        "description": "Timezone"
      },
      {
        "name": "PUID",
        "value": "1000",
        "description": "User ID"
      },
      {
        "name": "PGID",
        "value": "1000",
        "description": "Group ID"
      }
    ],
    "volumes": [
      {
        "host": "/vltos/configs/radarr",
        "container": "/config",
        "description": "Config directory"
      },
      {
        "host": "/vltos/downloads",
        "container": "/downloads",
        "description": "Downloads Directory"
      },
      {
        "host": "/vltos/media/movie",
        "container": "/movies",
        "description": "Media directory for movies"
      }
    ],
    "restart": "unless-stopped"
  }
}}